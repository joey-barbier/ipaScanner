                                            if (duplicate.name.includes('[') && duplicate.name.includes(']')) {
                                                // This is a cross-name duplicate like "[certif, star_off, star_on]"
                                                const assetNames = duplicate.name.slice(1, -1).split(', ');
                                                const assetName = assetNames[i] || `Asset ${i + 1}`;
                                                return `‚Ä¢ ${assetName}`;
                                            } else {
